<div class="comment">
  <div class="comment-content"><%= comment.content %></div>
  <div class="comment-author">Commented by: <%= link_to comment.user.full_name, comment.user %></div>
  <% if current_user == comment.user %>
    <p><%= link_to "delete comment", comment_path(comment), method: :delete %></p>
  <% end %>
</div>
